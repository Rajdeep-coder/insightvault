<div class="max-w-2xl mx-auto mt-12 bg-white p-6 rounded-xl shadow">
  <h2 class="text-2xl font-semibold text-gray-800 mb-4">Upload a PDF</h2>

  <%= form_with(model: @document, url: documents_path, local: true, html: { multipart: true }) do |f| %>
    <div class="mb-4">
      <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :title, class: "mt-1 w-full border px-4 py-2 rounded-md" %>
    </div>

    <div class="mb-4">
      <%= f.label :file, class: "block text-sm font-medium text-gray-700" %>
      <%= f.file_field :file, accept: "application/pdf", class: "mt-1 w-full" %>
    </div>

    <%= f.submit "Upload", class: "bg-indigo-600 text-white px-6 py-2 rounded-md hover:bg-indigo-700" %>
  <% end %>
</div>
